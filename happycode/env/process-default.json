{
    "name": "happycode",
    "script": "./bin/www",
    "watch": true,
    "ignore_watch": ["logs", "public", "views","node_modules","doc"],
    "env": {
	"NODE_ENV": "production",
	"PORT":3000
    },
    "instances": 4,
    "exec_mode":"cluster",
    "log_date_format": "YYYY-MM-DD hh:mm:ss",
    //"log_file":"/home/www/node/logs/happycode.log",
    "error_file": "/home/www/node/logs/happycode-err.log",
    "out_file":"/home/www/node/logs/happycode-out.log",
    "merge_logs":true,
    "max_restarts":30
}
